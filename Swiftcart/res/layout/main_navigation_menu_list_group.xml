<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_drawer_bg_color_green_light"
    android:minHeight="@dimen/main_navigation_menu_item_height"
    android:paddingEnd="@dimen/main_navigation_menu_item_padding_right"
    android:paddingLeft="@dimen/main_navigation_menu_item_padding_left"
    android:paddingRight="@dimen/main_navigation_menu_item_padding_right"
    android:paddingStart="@dimen/main_navigation_menu_item_padding_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/main_navigation_menu_list_group_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/ic_dry_goods" />

        <TextView
            android:id="@+id/main_navigation_menu_list_group_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/main_navigation_menu_item_margin_between_icon_and_title"
            android:gravity="center_vertical"
            android:text="aaaa"
            android:textColor="@color/main_navigation_menu_text_color"
            android:textSize="@dimen/main_navigation_menu_item_textSize" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_navigation_menu_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_drop_arrow"
        android:visibility="gone" />

</RelativeLayout>