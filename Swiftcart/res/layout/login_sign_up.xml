<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/sign_up_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="#ffffff"
            android:hint="Email"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/login_sign_up_edittext_color"
            android:textColorHint="@color/login_sign_up_edittext_color"
            android:textSize="19dp"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/sign_up_input_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:hint="Password"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/login_sign_up_edittext_color"
            android:textColorHint="@color/login_sign_up_edittext_color"
            android:textSize="19dp"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/sign_up_input_confirm_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:hint="Confirm Password"
            android:maxLines="1"
            android:padding="16dp"
            android:textColor="@color/login_sign_up_edittext_color"
            android:textColorHint="@color/login_sign_up_edittext_color"
            android:textSize="19dp"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/sign_up_btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="#cccccc"
            android:padding="16dp"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textSize="19dp" />
    </LinearLayout>

</ScrollView>